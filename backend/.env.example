# Environment Variables for Matsya Ocean Insights Backend
# Copy this file to .env and add your actual API keys

# === AI SERVICE CONFIGURATION ===
# Choose one or both AI services (Matsya AI will automatically select the best available)

# OpenAI API Key for GPT-4 (Recommended for advanced reasoning)
# Get your key from: https://platform.openai.com/api-keys
# Cost: ~$0.03/1k input tokens, $0.06/1k output tokens
OPENAI_API_KEY=your_openai_api_key_here

# Anthropic Claude API Key (Excellent for research, more cost-effective)
# Get your key from: https://console.anthropic.com/
# Cost: ~$0.015/1k input tokens, $0.075/1k output tokens
ANTHROPIC_API_KEY=your_anthropic_key_here

# Google Gemini API Key  
GOOGLE_API_KEY=your_google_gemini_key_here

# Hugging Face API Key (for open-source models)
HUGGINGFACE_API_KEY=your_huggingface_key_here

# Database Configuration (if using real database)
DATABASE_URL=sqlite:///./matsya_research.db

# External Marine APIs
# OBIS API (Ocean Biodiversity Information System) - usually free
OBIS_API_BASE=https://api.obis.org

# GBIF API (Global Biodiversity Information Facility) - free
GBIF_API_BASE=https://api.gbif.org/v1

# FishBase API - check their current API access
FISHBASE_API_KEY=your_fishbase_key_here

# Production Settings
DEBUG=False
CORS_ORIGINS=["http://localhost:3000", "http://localhost:5173", "http://localhost:8082"]

# Development Settings
DEV_MODE=True
LOG_LEVEL=INFO